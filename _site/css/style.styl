@import "_variables"
@import "_colors/" + $colors
@import "_util"
@import "_mixins"
@import "_extend"

@import "font-awesome-svg"

global-reset()

*, *:before, *:after
  box-sizing: border-box

html
  height: 100%
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

body
  display: flex
  flex-direction: column
  background-color: $color-background
  color: $color-text
  font-weight: 400
  font-size: $font-size
  font-family: $font-family-body
  line-height: $line-height
  text-rendering: geometricPrecision

  antialias()

.index
  margin-top: 4rem
  margin-bottom: 8rem
  @media (max-width: 480px)
    // smaller margins at smaller screen widths
    margin-top: 2rem
    margin-bottom: 4rem

.content
  flex: 1

  @extend $base-style

  code
    hyphens(manual)

  a
    text-decoration: none
    color: $color-text

  a:not(.link--bare),
  .link__text
    underline(5px, $color-text)

  a:not(.link--bare):hover,
  a:hover .link__text
    background-image: linear-gradient(transparent, transparent 4px, $color-link 4px, $color-link)

  a.icon
    background: none

    &:hover
      color: $color-link

  h1 a, .h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
    background: none
    color: inherit
    text-decoration: none

  h1 a:hover, .h1 a:hover, h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover
    underline(6px, $color-link)

  h6 a
    background: none
    color: inherit
    text-decoration: none

  h6 a:hover
    underline(6px, $color-link)

@media (min-width: 540px)
  .image-wrap
    flex-direction: row
    margin-bottom: 2rem

    .image-block
      flex: 1 0 35%
      margin-right: 2rem

    p
      flex: 1 0 65%

.max-width
  max-width: $page-width

@media (max-width: 480px)
  // smaller margins at smaller screen widths
  .px3
    padding-right: 1rem
    padding-left: 1rem

@media (min-width: 480px)
  p
    text-align: left

@import "_partial/header"
@import "_partial/post/share"
@import "_partial/index"
@import "_partial/article"
@import "_partial/archive"
@import "_partial/footer"
// Code
@import "_highlight/" + $highlight

pre
  overflow-x: auto
  margin: 1rem -1rem;
  padding: 0.5rem 1rem;
  font-family: $font-family-mono
  @media (min-width: 479px)
    border-radius: 4px
  line-height: 22px
  font-size: 16px

  code
    display: block
    padding: 0

code
  padding: 0.2em 0.5em
  background-color: #fdf6e3
  border-radius: 2px
  -webkit-border-radius: 2px
  font-family: $font-family-mono

.bmc
  display: inline-block
  background: #fd0
  padding: 0 0.5em
  &:hover
    color: white