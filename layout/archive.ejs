<div id="archive">
  <ul class="post-list">
    <% var year = 0 %>
    <% var change = false %>
    <% page.posts.sort('date', 'desc').each(function(post) { %>
      <% var itemYear = date(post.date, 'YYYY') - 0 %>
      <% change = year !== itemYear %>
      <% year = change ? itemYear : year %>
      <% if (change) { %>
        <h2><%= year %></h2>
      <% } %>
      <li class="post-item">
        <a href="<%- url_for(post.path) %>" class="post-item-link">
          <%- post.title %>
        </a>
      </li>
    <% }); %>
  </ul>
</div>
