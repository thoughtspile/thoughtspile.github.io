#header
  display: flex
  margin-top: -3rem
  padding: 3rem 0
  width: 100%

  background: none
  color: inherit
  text-decoration: none

  &.header--post
    padding-bottom: 2rem

  h1, .h1
    margin-top: 0
    margin-bottom: 0
    color: $color-text
    letter-spacing: .01em
    font-weight: 700
    font-style: normal

    antialias()

  font-size: 1.5rem
  line-height: 2em
  &.header--post
    font-size: 1rem

  #logo
    display: inline-block
    margin-right: 12px
    margin-left: -6px
    width: 1.2em
    height: 1.2em
    bottom: -0.3em
    position relative
    filter: grayscale(100%)
    -webkit-filter: grayscale(100%)
    border: 1px solid #aaa
    &:before, &:after
      content: ''
      display: block
      width: inherit
      height: inherit
      position absolute
    &:before
      border: inherit
      background: $color-accent-1
      border-color: $color-accent-1
      transform: rotate(60deg)
    &:after
      border: 1px solid #d480aa
      background: #fff
      transform: rotate(30deg)

#header:hover
  #logo
    filter: none
    -webkit-filter: none

@media screen and (max-width: 480px)
  #header #nav
    ul
      a:hover
        background: none

      li
        display: none
        border-right: 0

      li.icon
        position: absolute
        top: 55px
        right: 1rem
        display: inline-block

    ul.responsive
      li
        display: block

    li:not(:first-child)
      padding-top: 1rem
      padding-left: $logo-width + 20px
      font-size: 1rem
